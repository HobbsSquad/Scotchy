<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/header %>
        <% include ../partials/navbar %>

        <table>
            <tr>
                <td><h3>Contents:</h3></td>
                <td style="padding-left: 5px">
                    <form action="/scotches/new" method="post">
                        <input type="submit" value="New" class="submit"/>
                    </form>
                </td>
            </tr>
        </table>
        <table class="table-scotch-notes">
            <thead>
                <th>Scotch</th>
                <th>Style</th>
                <th>Region</th>
                <th>Rating</th>
                <th>In Stock</th>
                <th colspan="2"></th>
            </thead>
            <% result.forEach(function(scotch) { %>
                <tr>
                    <td><a href="/scotches/<%= scotch._id %>"><%= scotch.dramName %></a></td>
                    <td><%= scotch.style %></td>
                    <td><%= scotch.region %></td>
                    <td>
                        <% for(var i=0; i<scotch.rating; i++) { %>
                            &#9733;
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <% if (scotch.inStock) { %>
                            &#10004;
                        <% } %>
                    </td>
                    <td>
                        <a href="/scotches/update/<%= scotch._id %>" class="submit link">Edit</a>
                        <a href="/scotches/delete/<%= scotch._id %>" class="submit link">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </table>
        <% include ../partials/footer %>
    </body>
</html>
